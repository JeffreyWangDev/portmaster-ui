{
  "name": "app-electron",
  "version": "0.0.1",
  "scripts": {
    "build": "tsc && cp package-prod.json dist-src/package.json",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "bundle": "electron-builder -wl",
    "start": "npm run build && electron ./dist-src/index.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "electron": "^9.3.1",
    "electron-builder": "^22.9.1",
    "typescript": "^3.9.5"
  },
  "dependencies": {},
  "build": {
    "appId": "io.safing.portmaster",
    "directories": {
      "output": "dist",
      "app": "dist-src",
      "buildResources": "build"
    },
    "win": {
      "target": "portable"
    }
  }
}