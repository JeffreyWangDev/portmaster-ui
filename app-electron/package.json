{
  "name": "portmaster-app",
  "description": "Portmaster Privacy App",
  "repository": "https://github.com/safing/portmaster-ui",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "build": "tsc && cp package-prod.json dist-src/package.json",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "bundle": "electron-builder -wl",
    "start": "npm run build && electron ./dist-src/index.js",
    "pack": "npm install && npm run build && npm run bundle"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "electron": "^9.3.1",
    "electron-builder": "^22.9.1",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3"
  },
  "electronDownload": {
    "strictSSL": true
  },
  "build": {
    "directories": {
      "output": "dist",
      "app": "dist-src",
      "buildResources": "build"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "AppImage",
      "category": "Security"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
